<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/event_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feedBackground">

    <TextView
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_mile_radius_ex_20"
        android:textColor="@color/blackColor"
        android:textSize="16sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/miles_edit_text_field"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/text_within" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/miles_edit_text_field"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:background="@color/searchBarColor"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/blackColor"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:theme="@style/AppTheme.PurpleButton"
        android:id="@+id/search_event_button"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="@string/search_events"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/miles_edit_text_field"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>