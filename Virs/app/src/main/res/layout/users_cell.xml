<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:background="@color/whiteColor">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/event_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:civ_border_width="0.5dp"
        app:civ_border_color="@color/virsPurple"
        android:src="@color/feedBackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/misreadpoet"
        android:textSize="16sp"
        android:textColor="@color/virsPurple"
        app:layout_constraintLeft_toRightOf="@+id/event_image"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" />

    <ImageView
        android:contentDescription="@string/chev"
        android:id="@+id/chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chevronright"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:maxWidth="300dp"
        app:layout_constraintTop_toBottomOf="@+id/event_name"
        app:layout_constraintLeft_toRightOf="@+id/event_image"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>