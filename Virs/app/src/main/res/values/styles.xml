<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blackColor</item>
        <item name="colorPrimaryDark">@color/whiteColor</item>
        <item name="colorAccent">@color/virsPurple</item>
        <item name="android:statusBarColor">@color/virsPurple</item>
    </style>

    <style name="AppTheme.PurpleButton" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/virsPurple</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="AppTheme.TwitterButton" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/twitterColor</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="AppTheme.TransButton" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@color/blackColor</item>
    </style>

    <style name="AppTheme.ClickedTransButton" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@color/virsPurple</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
